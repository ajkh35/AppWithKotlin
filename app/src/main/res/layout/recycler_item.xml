<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="@dimen/dp_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recycler_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/recycler_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_text"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true"
            android:layout_below="@id/recycler_image"/>

        <TextView
            android:id="@+id/recycler_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@id/recycler_item_text"
            android:layout_centerInParent="true"
            android:text="@string/item_summary"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>